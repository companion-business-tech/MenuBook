<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true"
    android:background="@color/colorBackgroundView"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--Tool bar-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_user"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Menu Book"
                            android:gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_logo_smile"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_heart"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <!--Image-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="-10dp"
                        android:layout_marginEnd="-10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_main_image"
                            android:scaleType="centerCrop"/>
                    </FrameLayout>

                    <!--Search bar-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/white_rounded"
                        android:layout_marginTop="-35dp"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_search" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Search"
                            android:fontFamily="@font/proxima_nova"
                            android:textColor="@color/colorGrey"
                            android:background="@color/colorTransparent"
                            android:layout_marginHorizontal="40dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_filter" />
                    </RelativeLayout>

                    <!--Categories-->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="178dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <!--Row 1-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginEnd="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_vegetables" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Vegetables"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_meat" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Meat"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_chicken" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Chickens"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginStart="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_fish" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Fish"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <!--Row 2-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginEnd="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_salad" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Salad"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_soup" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Soaps"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_breakfast" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Breakfast"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginStart="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_desserts" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Desserts"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </LinearLayout>

                    <!--Popular Dishes-->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popular Dishes"
                        android:layout_marginTop="26dp"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="18sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="116dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="90dp"
                        android:scrollbars="none"
                        android:layout_marginStart="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="124dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="62dp"
                                        android:src="@drawable/ic_plate_potato_vegetables" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="Potato Vegetables"
                                        android:layout_gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="12sp" />

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:numStars="5"
                                        android:rating="4"
                                        android:layout_gravity="center"
                                        android:stepSize="0.1"
                                        android:isIndicator="true" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="124dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginStart="20dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="62dp"
                                        android:src="@drawable/ic_plate_meat_vegetables" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="Meat Vegetables"
                                        android:layout_gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="12sp" />

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:numStars="5"
                                        android:rating="3"
                                        android:layout_gravity="center"
                                        android:stepSize="0.1"
                                        android:isIndicator="true" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="124dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="32dp"
                                android:layout_marginStart="20dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="62dp"
                                        android:src="@drawable/ic_plate_shrimp_tomatoes" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="Sambal Shrimp"
                                        android:layout_gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/proxima_nova"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="12sp" />

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:numStars="5"
                                        android:rating="3"
                                        android:layout_gravity="center"
                                        android:stepSize="0.1"
                                        android:isIndicator="true" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimaryVeryLight">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/ic_dashboard"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_foodtray"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/background_view_rounded"/>

            <View
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center|bottom"
                android:elevation="2dp"
                android:outlineSpotShadowColor="#B1B1B1"
                android:background="@drawable/white_rounded" />

            <ImageView
                android:id="@+id/scanQR"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center|bottom"
                android:padding="14dp"
                android:elevation="2dp"
                android:src="@drawable/ic_qr" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>